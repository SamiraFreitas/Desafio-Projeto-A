<!DOCTYPE html>

<html lang="pt-br">

  <head>
    <%- include ("../partials/header.ejs") %>
      <title>FYREP - Inscreva-se </title>
    <link rel="stylesheet" type="text/css" href="CSS/signin.css">
  
  </head>


<body >

   <!-- Inicio do Cabecalho-->
  <header>
    <%- include ("../partials/nav.ejs") %>
  </header>
  <!-- Fim do Cabecalho-->

  <!-- Inicio da seção login-->
  <section id="login" class="d-flex">
    <div class="container align-self-center ">
      <div class="row d-flex justify-content-center">
        <form action="/inscreva-se" method="POST" class="form-signin text-center rounded shadow">

          <img class="mb-4" src="Imagens/SVG LOGO.svg" alt="" width="30%">
          <h2 class="h3 mb-3 font-weight-normal" style="color: #FF9E00">
            Cadastro
          </h2>

          <label for="name" class="sr-only">
            Nome Usuario
          </label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Nome Usuario" required autofocus>
          <label for="email" class="sr-only">
            E-mail
          </label>
          <input type="email" id="email" name="email" class="form-control" placeholder="E-mail" required>
          <label for="password" class="sr-only">
            Senha
          </label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Senha" required>
          <label for="password2" class="sr-only">
            Confirmar Senha
          </label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirmar Senha" required>
       <!-- </li>
           <div class="checkbox mb-3">
                      <label>
                          <input type="checkbox" value="remember-me"> 
                          Lembrar-me
                      </label>
                      <div class="checkbox mb-3">
                        <label>
                          <input type="checkbox" value="remember-me">
                          <font color="#FF9E00"> Aceitar Termos </font>
                        </label>
                      </div>
                    </li>
                  </div> -->
        <input class="btn btn-lg btn-block botao" type="submit" value=" Inscreva-se"> </input>
        <ul>
          <% if(typeof errors != "undefined"){ %>
            <% errors.forEach(error=>{ %>
              <li><%= error.message %></li>
            <% }) %>
          <% } %>
        </ul>
          <p class="mt-5 mb-3 text-muted">
            &copy; Fy Rep 2021
          </p>

        </form>
      </div>
    </div>

  </section>
  <%- include ("../partials/footer.ejs") %>

</body>

</html>


